---
---

[
  {% for source in site.sources %}{
    "name": "{{ source.name }}",
    "category": "{{ source.category }}",
    "icon": "{{ site.data.categories[source.category].icon }}",
    "links": [
      {% for link in source.links %}
      {
        "text": "{{ link.text }}",
        "href": "{{ link.href }}",
        "icon": "{{ link.icon }}"
      }{% unless forloop.last %},{% endunless %}
      {% endfor %}
    ],
    "content": "{{ source.content | strip_html | strip_newlines }}"
  }{% unless forloop.last %},{% endunless %}
  {% endfor %}
]
